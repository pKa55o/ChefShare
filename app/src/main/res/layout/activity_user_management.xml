<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:text="Quản lý người dùng"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:padding="4dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:background="#357ABD"
                android:gravity="center"
                android:padding="8dp"
                android:text="id user"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:background="#357ABD"
                android:gravity="center"
                android:padding="8dp"
                android:text="name"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:background="#357ABD"
                android:gravity="center"
                android:padding="8dp"
                android:text="Email"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:background="#357ABD"
                android:gravity="center"
                android:padding="8dp"
                android:text="SL bài đăng"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </TableRow>

        <!-- Các dòng dữ liệu sẽ thêm bằng code -->

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDeleteUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#357ABD"
            android:text="Xóa người dùng"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnViewUserPosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#357ABD"
            android:text="Xem bài đăng"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>

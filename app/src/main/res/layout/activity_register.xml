<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:padding="24dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center">

    <!-- Logo -->
<ImageView
android:layout_width="180dp"
android:layout_height="180dp"
android:src="@drawable/logo"
android:contentDescription="Logo"
android:layout_marginBottom="40dp" />

    <!-- Họ và tên -->
<EditText
android:id="@+id/etFullName"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Họ và tên"
android:drawableStart="@drawable/ic_person"
android:background="@drawable/bg_rounded_border_grey"
android:padding="12dp"
android:layout_marginBottom="12dp" />

    <!-- Email -->
<EditText
android:id="@+id/etEmail"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Email"
android:inputType="textEmailAddress"
android:drawableStart="@drawable/ic_email"
    android:background="@drawable/bg_rounded_border_grey"
android:padding="12dp"
android:layout_marginBottom="12dp" />

    <!-- Mật khẩu -->
<EditText
android:id="@+id/etPassword"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Mật khẩu"
android:inputType="textPassword"
android:drawableStart="@drawable/ic_lock" android:background="@drawable/bg_rounded_border_grey"
android:padding="12dp"
android:layout_marginBottom="20dp" />

    <!-- Nút Đăng ký -->
<Button
android:id="@+id/btnRegister"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Đăng ký"
android:textStyle="bold"
android:textSize="18sp"
android:textColor="#FFFFFF"
android:backgroundTint="#203b8c"
android:padding="12dp" />

    <!-- Quay về đăng nhập -->
<TextView
android:id="@+id/tvBackToLogin"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Đã có tài khoản? Đăng nhập ngay!"
android:textColor="#4285F4"
android:layout_marginTop="12dp"
android:textSize="14sp"
android:layout_gravity="center" />
    </LinearLayout>
    </ScrollView>

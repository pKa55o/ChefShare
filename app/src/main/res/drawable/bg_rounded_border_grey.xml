<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền trắng đục -->
    <solid android:color="#FFFFFF" />

    <!-- Viền màu xám -->
    <stroke
        android:width="2dp"
        android:color="#BBBBBB" />

    <!-- Bo tròn góc -->
    <corners android:radius="12dp" />

    <!-- Padding bên trong -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
